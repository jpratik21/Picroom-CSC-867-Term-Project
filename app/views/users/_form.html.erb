<%= form_for(@user) do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <input id="user_username" name="user[user_name]" value="<%=@user.user_name%>" class="rounded" placeholder="username" size="30" type="text" />
  </div>
  <div class="field">
    <input id="user_email" name="user[email]" value="<%=@user.email%>" class="rounded" placeholder="email" size="30" type="text" />
  </div>
  <div class="field">
    <input id="user_password" name="user[password]" class="rounded" placeholder="password" size="30" type="password" />
  </div>
  <div class="field">
    <input id="user_password_confirmation" name="user[password_confirmation]" class="rounded" placeholder="confirm password" size="30" type="password" />
  </div>
  <div class="thumb">
  </div>
  <div id="mythumb">
  </div>

  <div class="field">
    Avatar:
      <%= f.file_field :image %>
  </div>
  <button class="action blue" style="float:left;">
    <span class="label">
         Save
    </span>
  </button>

<% end %>


