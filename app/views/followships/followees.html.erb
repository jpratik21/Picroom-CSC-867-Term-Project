<div id="noticebox">
	<b>
		<%= @follower.user_name %> is following:
	</b>
</div>

<div id="bigbox"> 
	<div id="insideboxmiddle">
	    <% @followships.each do |f| %>
		  	<div id="listbox">
			    <a href = "/users/<%=f.followee_id%>">
				    <div id="listboxavantar">
				      <%= image_tag f.followee.image_url(:tinythumb).to_s%>
				    </div>
			    </a>
		    
			    <div id="listboxname">
			    	<p><%= f.followee.user_name %></p>
			    </div>
			    
			    <div id="listboxemail">
			    	<p><%= f.followee.email %></p>
			    </div>

			    <% if User.find_by_id(session[:user_id]).isFollowing(f.followee_id) %>
			        <div id="listboxbuttonssp">
				        <a href="/followships/destroy/<%=f.followee_id%>" class="button red">
				            Unfollow
				        </a>
			        </div>
			    <% else %>
			        <div id="listboxbuttonssp">
				        <a href="/followships/new/<%=f.followee_id%>" class="button blue">
				            Follow
				        </a>
			        </div>
			    <% end %>
		    </div>
		<% end %>
		<br />
	</div>
</div>


