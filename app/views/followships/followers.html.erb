<div id="noticebox">
	<b>
		<%= @followee.user_name %> is followed by:
	</b>
</div>
<div id="bigbox">  
	<div id="insideboxmiddle">

	    <% @followships.each do |f| %>
		    <div id="listbox">
			    <a href = "/users/<%=f.follower_id%>">
				    <div id="listboxavantar">
				      <%= image_tag f.follower.image_url(:tinythumb).to_s%>
				    </div>
			    </a>
		   
			    <div id="listboxname">
			    	<p><%= f.follower.user_name %></p>
			    </div>
			    <div id="listboxemail">
			    	<p><%= f.follower.email %></p>
			    </div>

			    <% if User.find_by_id(session[:user_id]).isFollowing(f.follower_id) %>
			        <div id="listboxbuttonssp">
				        <a href="/followships/destroy/<%=f.follower_id%>" class="button red">
				            Unfollow
				        </a>
			        </div>
			    <% else %>
			        <div id="listboxbuttonssp">
				        <a href="/followships/new/<%=f.follower_id%>" class="button blue">
				            Follow
				        </a>
			        </div>
			    <% end %>
		    </div>
		<% end %>
		<br />
	</div>
</div>


